<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UIX</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UIX.styles.css" asp-append-version="true" />

</head>
<body>
    <header>
        <div class="Header">

            @if (DataManager.activeUser != null)
            {
                @DataManager.activeUser.Name
            }

            <h1>Student Help</h1>
            @if (DataManager.activeUser == null)
            {
                <div class="HeaderButton"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Login">Login</a></div>
                <div class="HeaderButton"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="SignUp">Sign Up</a></div>
            }
            else
            {
                <div class="HeaderButton"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Home">Home</a></div>
                <div class="HeaderButton"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Meeting">Meetings</a></div>
                <div class="HeaderButton"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Messages">Messages</a></div>
                <div class="HeaderButton"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Logout">Logout</a></div>
            }
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>